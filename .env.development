# F1 MCP Server Development Configuration
NODE_ENV=development
MCP_SERVER_NAME=f1-mcp-server
MCP_SERVER_VERSION=1.0.0

# Deployment Configuration
# Set to 'stdio' for local MCP usage, 'web' for Render.com deployment
DEPLOY_MODE=stdio
PORT=3001

# Server Configuration
MCP_HOST=localhost
MCP_PORT=3001

# F1 API Proxy Configuration
F1_API_PROXY_URL=http://localhost:8000
F1_API_TIMEOUT=10000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Tool Configuration
MAX_SEASONS=10
MAX_RACES_PER_SEASON=25
MAX_DRIVERS_PER_SEASON=30
DEFAULT_SEASON=current
