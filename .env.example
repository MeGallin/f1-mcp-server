# F1 MCP Server Configuration
# Set to 'production' for deployment, 'development' for local development
NODE_ENV=development
MCP_SERVER_NAME=f1-mcp-server
MCP_SERVER_VERSION=1.0.0

# Server Configuration
MCP_HOST=localhost
MCP_PORT=3001

# F1 API Proxy Configuration
# For production, use your deployed API proxy URL
F1_API_PROXY_URL=http://localhost:8000
F1_API_TIMEOUT=10000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Tool Configuration
MAX_SEASONS=10
MAX_RACES_PER_SEASON=25
MAX_DRIVERS_PER_SEASON=30
DEFAULT_SEASON=current
